{
  "name": "app",
  "version": "0.0.1",
  "description": "Business Application",
  "dependencies": {
    "@sap-cloud-sdk/http-client": "^3.20.0",
    "@sap/audit-logging": "^3",
    "@sap/cds": "^8",
    "@sap/cds-hana":"^2",
    "@sap/hana-client": "^2",
    "@sap/xsenv": "^3",
    "@sap/xssec": "^3",
    "debug": "^4.3",
    "express": "^4",
    "passport": "^0.4.1"
  },
  "devDependencies": {
    "sqlite3": "5.0.0"
  },
  "scripts": {
    "start": "npx cds run"
  },
  "cds": {
    "requires": {
      "uaa": {
        "kind": "xsuaa"
      },
      "auth": {
        "[production]": {
          "strategy": "JWT"
        },
        "[development]": {
          "strategy": "mock",
          "users": {
            "joe": {
              "roles": [
                "Admin",
                "Viewer"
              ]
            },
            "julie": {
              "roles": [
                "Viewer"
              ]
            },
            "bob": {
              "roles": [
                "Viewer"
              ]
            }
          }
        }
      },
      "db": {
        "[production]": {
          "kind": "hana"
        },
        "[development]": {
          "kind": "sql"
        }
      },
      "API_SALES_ORDER_SRV": {
        "kind": "odata",
        "model": "srv/external/API_SALES_ORDER_SRV",
        "credentials": {
          "[production]": {
            "destination": "app-API_SALES_ORDER_SRV",
            "path": "s4hanacloud/sap/opu/odata/sap/API_SALES_ORDER_SRV"
          },
          "[development]": {
            "url": "https://sandbox.api.sap.com/s4hanacloud/sap/opu/odata/sap/API_SALES_ORDER_SRV"
          }
        }
      },
      "API_BUSINESS_PARTNER": {
        "kind": "odata",
        "model": "srv/external/API_BUSINESS_PARTNER",
        "credentials": {
          "[production]": {
            "destination": "app-API_BUSINESS_PARTNER",
            "path": "s4hanacloud/sap/opu/odata/sap/API_BUSINESS_PARTNER"
          },
          "[development]": {
            "url": "https://sandbox.api.sap.com/s4hanacloud/sap/opu/odata/sap/API_BUSINESS_PARTNER"
          }
        }
      },
      "RCMCandidate": {
        "kind": "odata",
        "model": "srv/external/RCMCandidate",
        "credentials": {
          "[production]": {
            "destination": "app-sf-api",
            "path": "odata/v2"
          },
          "[development]": {
            "url": "https://sandbox.api.sap.com/successfactors/odata/v2"
          }
        }
      }
    },
    "hana": {
      "deploy-format": "hdbtable"
    }
  }
}
